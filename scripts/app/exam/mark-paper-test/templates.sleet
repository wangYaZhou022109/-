#! handlebars

module > .achievement-content
    .achievement-side.bg-color(data-region='side')
    .achievement-head(data-region='head')
    .achievement-main(data-region='main')

view('side')
    ul.list > each(questionTypes)
        li(id='list-item-'+ @index)
            .list-title > i.iconfont.icon-type.m-right + echo(data.name '题' '(共' data.totalScore '分)')
            div(class='min-btn-groups ' + if(isCurrent '' 'hidden')) > each(data.data)
                div(class='list-item' + if(isCurrent 'correct' ''))(id='q-'+id) > echo(i)


view('head')
    .pull-left.title 
        span > echo(state.name)
        if(anonymityMark)
            echo('考生： ' state.member.name)

view('main')
    .preview-content
        if(state.isOnePageOneQuestion)
            if(state.questionId)
                div(data-dynamic-key=state.questionId)
        else
            div
                each(questionTypes)
                    .h3.m-bottom > echo(data.name '题' '(共' data.totalScore '分)')
                    each(data.data)
                        div(data-dynamic-key=id)


view('tips')
    .title-row.row
        .col-sm-12
            .com-title
                echo(message)
