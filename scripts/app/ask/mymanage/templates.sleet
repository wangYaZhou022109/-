    ul.manage-list
        each(reviewed)
            compare(auditStatus 'eq' 0)
                li
                    .clearfix
                        .pull-right
                            .sub-text.small-font
                                span.m-right > echo('提交人：') + echo(member.fullName)
                                span > echo('提交时间: ') + date(createTime)
                        .title-row
                            .inline-block.color-ing > map('ask-audit-status' auditStatus)
