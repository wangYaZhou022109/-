#!handlebars
module > .course-page
    div(data-region='mymanage')
    div(data-region='reviewed')
view('mymanage')
    .tabs.line > ul
        li.active > echo('我的管理')
    .comment-list.ask-list.min > ul
        each(mymanage)
            li.topic-item
                a.normal(id='topicDeal-' + id data-name='id' data-value=id href="javascript:;")
                    .img > .img-cont > img(src="images/demo/1.jpg")
                    h4.text-overflow > echo(name)
                    .info > echo('今日新增:') + echo(todayQuestionSum) + echo('问题|') + echo(todayShareSum) + echo('分享')
           
