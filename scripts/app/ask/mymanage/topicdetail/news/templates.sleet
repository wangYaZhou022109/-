                                    .item(  id='trend-follow-2_' + id data-name='id' data-value='2_' + id ) > string('follow') 
                                .item(id='discuss-' + id ) > echo('参与讨论') +  echo('（' + questionReplyNum +'）')
                    
                                .item > .share-bar
