module
    .ask-page > .container
        .page-main-wrapper.knowledge-side
            .page-side.side-min
                div(data-region='top')
                div(data-region='relevantexperts')
                div(data-region='relatedquestions')
            .page-main(data-region='main')
view('main')
    .comment-list.ask-list > ul
        li
            .user-pic > img(src=details.member.headPortrait)
            .comment-content
                .user-info.m-top
                    a(href='javascript:;') > echo(details.member.fullName)
                    span > echo('·提问·')
                    span.sub-text > echo(details.createTime)
                .sub-text.m-top > echo('来自话题：') + each(details.topicList) > echo(' '+name)
            .h4.mt-1 > echo(details.title)
            .comment-text.m-top
                compare(thumbnail.length 'gt' 0)
                    img(src=thumbnail)
                @echo(details.content)
            .comment-operation
                .pull-right
                    .item > .share-bar
                        .drop-down-wrapper
                            i.iconfont.icon-share-2(title='分享')
                            form.drop-down-content > .content
                                .item > div(id ='shareTo-qzone' + id) > i.iconfont.icon-q-zone + span 分享到QQ空间
                                .item > div(id ='shareTo-weibo' + id) > i.iconfont.icon-sina + span 分享到新浪微博
                                #  .item > div(id ='shareTo-bar' + questionId) > i.iconfont.icon-ask + span 分享到问吧
                    .item > span(id ='report-' + 1 + '_' + details.id+'_' + details.createMemberId data-name='id' data-value=1 +'_' + details.id+'_' + details.createMemberId) > string('report')
                .pull-left
                    span.pull-left 附件：
                    i.iconfont.icon-image.pull-left.m-right
                    a.normal(href="javascript") > each(details.questionAttachList) > echo(' '+ name)
    section.section
        form.vertical
            .h3 讨论区
            .sub-text.layout-mt-small.layout-mb-small 文明上网、理性发言、请遵守企业发言纪律
            textarea.input.w-full(name='t_content' rows='5')
            input.input(type='hidden' name='organizationId' value=details.organizationId)
            input.input(type='hidden' name='id' value=details.id)
            .m-top.text-right > .btn#discuss 发表
        
    .layout-mt
        .comment-list > each(details.questionDiscussList) > ul
            li
                .user-pic > img(src="images/1.png")
                .comment-content
                    .user-info
                        a(href='#') > echo( member.fullName)
                        span > echo(organization.name)
                    .comment-text > echo(content)
                    .comment-operation
                        #  .pull-left > .sub-text 2017-01-17
                        .text-right
                            .item > span(id='praise-'+ id data-name='id' data-value= id) > echo('赞（' + praiseNum +'）')                           
                            .item > span(id='discuss-answer-'+id data-name='id' data-value=id) > echo('回复')
                            .item > span(id ='report-' + 3 + '_' + id+'_' + createMemberId data-name='id' data-value= 3+'_' + id+'_' + createMemberId) > string('report')
                    div(id='reply-'+id name='reply-' + id style='display:none')
view('top')        
    .section
        .h4.text-center
            | 该问题已有
            b.h2.custom-color-3 > echo(details.concernNum)
            | 人关注
        compare(details.auditStatus 'eq' 0)
            .text-main-color.h2 
                echo('审核中')
            .btn.block.layout-mt-small.big(id='del-question-' + id data-name='id' data-value=details.id ) > echo('删除问题')
        compare(details.auditStatus 'eq' 1)    
            compare(details.concernNum 'gt' 0)
                .btn.block.layout-mt-small.big(id='unfollow-2_' + id data-name='id' data-value='2_' + details.id ) > string('unfollow')
            else
                .btn.block.layout-mt-small.big(id='follow-2_'+ id data-name='id' data-value='2_' + details.id ) > string('my-follow')
        compare(details.auditStatus 'eq' 2)
            .color-error.h2 
                echo('已拒绝')
            .btn.block.layout-mt-small.big(id = 'del-question-' + id data-name='id' data-value=details.id ) > echo('删除问题')        
    #  div(data-dynamic-key=followcount.menu) 

view('relevantexperts')
    #  div(data-dynamic-key=relevantexperts.menu)
    .h3 > echo('相关专家')
        
    .comment-list.ask-list > ul.clearfix
        each(expert)
            li.topic-item.pull-left 
                a.normal(href="javascript:;")
                    .img > .img-cont > img(src="images/demo/1.jpg")
                    h4.text-overflow(title='温暖气氛') > a(id='detail-' + id data-name='id' data-value=id href='javascript:;') > echo(name)

view('relatedquestions')
    div(data-dynamic-key=relatedquestions.menu)


