#!handlebars

module > .activity-page
    .activity-banner(data-region='banner')
    .activity-list
        .container
            .main-list(style='height:3000px;')
                .activity-category
                    .pull-left(style='height:100px;width:70%;' data-region='list')
                    .pull-right
                        .content
                            div(data-region='top')

view('banner')
    .bg-img > .container > .activitys-ul.banner
        ul
            li(style='height:300px;width:2000px;float:left;')
                .img(style='height:100px;width:200px;float:left;') > img(src='images/default-cover/default_exam.jpg' )
                a(href='javascript:;') > echo(expert.member.fullName)
                div > echo('我擅长的话题:') 
                div > echo(expert.introduce) 
view('list')
    a(id='menu-expertsanswer' href='javascript:;')(class ='active') > string('expert') + string('answer')
    a(id='menu-expertssharing' href='javascript:;')(class ='active') > string('experts-sharing') 
    hr
    div(data-dynamic-key=state.menu)
view('top')
    table.table
        tr > td(align='center') > .btn.radius(id='question-question' data-name='id' data-value='1' style='height:50px;width:300px;text-align:center') > echo('发问题')
        tr > td(align='center') > .btn.radius(id='article-article' data-name='id' data-value='2' style='height:50px;width:300px;text-align:center') > echo('写文章')

