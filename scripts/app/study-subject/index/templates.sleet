#!handlebars

module > .study-subject-page
    .top.top-bg-img.bg-main-color(data-region='top')
    .main > .container > .study-subject-list(data-region='list')


view('top')
    .container.clearfix > .search-bar.block
        form.vertical
            input.input(id='searchContent' name='name' placeholder="请输入你需要寻找的专题")
            i.iconfont.icon-search.scale-1.text-hover-main-color#searchByName

view('list')
    .main-list
        .filter
            .item.inline-block#order-1
                | 最新
                compare(search.orderBy 'eq' '1')
                    compare(search.order 'eq' 2)
                        i.iconfont.icon-arrow-down.down
                    compare(search.order 'eq' 1)
                        i.iconfont.icon-arrow-up.up
            .item.inline-block#order-3
                | 好评
                compare(search.orderBy 'eq' '3')
                    compare(search.order 'eq' 2)
                        i.iconfont.icon-arrow-down.down
                    compare(search.order 'eq' 1)
                        i.iconfont.icon-arrow-up.up
            .item.inline-block#order-2
                | 最热
                compare(search.orderBy 'eq' '2')
                    compare(search.order 'eq' 2)
                        i.iconfont.icon-arrow-down
                    compare(search.order 'eq' 1)
                        i.iconfont.icon-arrow-up.up
        ul > each(subjects)
            li > .content
                .img > .img-cont > img(src=imageUrl)
                .clearfix
                    .pull-right.small-font.layout-ml
                        i.iconfont.icon-user
                        span.m-let > echo(studyMemberCount) > string('study.member.count')
                    .title.text-overflow > echo(name)
                .clearfix.small-font
                    .pull-right > date(beginDate)
                        echo('~')
                        date(endDate)
                    string('begin-end-time')
                .detail-wrapper
                    p > echo(name)
                    | 目标学习天数 ：
                    echo(studyDays) > string('unit.day')
        #pager.pagination
