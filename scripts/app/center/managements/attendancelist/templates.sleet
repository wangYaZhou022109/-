#!handlebars

module > .attendancelist-page
    .attendancelist-title(data-region="attendancelist-title")
    .attendancelist-content(data-region="attendancelist-content")

view('attendancelist-title')
    .border.bottom.solid
        .layout-mt-small.clearfix
            .attendancelist-title-item.pull-left.layout-mr
                span 签到名称：2016-1-9上午签到
            .attendancelist-title-item.pull-left.layout-mr
                span 2016-1-9 9:00
                span 至
                span 2016-1-9 9:00
            .attendancelist-title-item.pull-left.layout-mr
                span 迟到时间：2016-1-9 9:00
        .layout-mt-small.clearfix.layout-mb-small
            .recommend-item.layout-mr.pull-left
                i.iconfont.icon-user-1.m-right
                span.m-right 应出勤
                span.strong 28
                span 人
            .recommend-item.layout-mr.pull-left
                i.iconfont.icon-time.m-right.text-main-color
                span.m-right 正常签到
                span.strong 24
                span.m-right 人
                span.m-right 迟到
                span.strong 2
                span.m-right 人
                span.m-right 未签到
                span.strong 2
                span 人
            .recommend-item.layout-mr.pull-left
                i.iconfont.icon-user.m-right
                span.m-right 请假
                span.strong 1
                span 人

view('attendancelist-content')
    .layout-mt-small
        .attendancelist-search.clearfix
            .pull-left
                input.input.tag-height.layout-mr-small(placeholder="请输入员工姓名")
                label 签到状态
                select.tag-height
                    option 全部
                    option 正常
                    option 迟到
                    option 缺勤
                    option 请假
            .pull-right
                .btn.gray.tag-height 查询
                .btn.gray.tag-height.m-left 导出
                .btn.gray.tag-height.m-left#mostsign-1 批量签到
        .layout-mt-small
            table.table
                tr
                    th > input(type="checkbox")
                    th 员工编号
