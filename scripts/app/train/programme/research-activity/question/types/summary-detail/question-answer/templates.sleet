#!handlebars

module
    div(data-region='main')

view('main')
    echo(question.index '.' '【')
    map('research-question-types' question.type)
    echo('】')
    @echo(question.content)
    each(answerRecords)
        .clearfix.statistics-list
            .statistics-list-tit > echo('xxx 的回答：' answer)
            .statistics-list-time > dateTime(createTime)
    if(biggerThan)
        a#more.center-text > string('exam.research.question.question-answer.view-more')