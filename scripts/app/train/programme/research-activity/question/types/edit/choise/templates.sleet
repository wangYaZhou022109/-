#!handlebars

module > form.vertical
    .choosequestion(data-region='content')
    .choosequestion(data-region='options')
    .choosequestion(data-region='score')

view('content')
    .form.align-left
        .form-row.r-padding
            label.required 试题信息
            textarea.w-full#content(name='content' rows='5')
        if(showDiffculty)
            div
                label(class='required') 难易度
                select.input#difficulty(name='difficulty' x-rule='required' x-marker='selectize' readonly='readonly') > each(difficultys)
                    option(value=key)('selected')&if(selected) > echo(value)

view('options')
    .layout-mt-small
        table.table
            tr
                th 选项
                th(colspan='3') > a.m-left#add(href='javascript:;') 添加选项
            tr
                td 题号
                td 描述
                compare(mode 'eq' 1)
                    td 分数
                td 操作
            each(options)
                tr(id='item-' + index)
                    td
                        span.list-option > echo('选项' + code ':')
                    td
                        if(isRichText)
                            textarea.w-full > @echo(content)
                            input(type='hidden' id='content-' + index value=content)
                        else
                            textarea.w-full(placeholder='输入描述' id='content-' + index data-name='index' data-value=index rows=3 cols='100%') > echo(content)
                    compare(mode 'eq' 1)
                        td
                            input.input(placeholder='输入分数' id='score-' + index x-rule='required,number,interval:0:1:10:0,keepDecimal:0')
                    td
                        span(data-dynamic-key=index)
                        a(href='javascript:;' id='remove-' + index data-name='index' data-value=index) 删除

