#! handlebars
module
    div(data-region='pannel')

view('pannel')
    .pswp#swipe(tabindex="-1" role="dialog" aria-hidden="true")
        .pswp__bg
        .pswp__scroll-wrap
            .pswp__container
                .pswp__item
                .pswp__item
                .pswp__item
            .pswp__ui.pswp__ui--hidden
                .pswp__top-bar
                    .pswp__counter
                    btn.pswp__button.pswp__button--close(title="Close (Esc)")
                    btn.pswp__button.pswp__button--fs(title="Toggle fullscreen")
                    btn.pswp__button.pswp__button--zoom(title="Zoom in/out")
                    .pswp__preloader
                        .pswp__preloader__icn
                            .pswp__preloader__cut
                                .pswp__preloader__donut
                .pswp__share-modal.pswp__share-modal--hidden.pswp__single-tap
                    .pswp__share-tooltip
                btn.pswp__button.pswp__button--arrow--left(title="Previous (arrow left)")
                btn.pswp__button.pswp__button--arrow--right(title="Next (arrow right)")
                .pswp__caption
                    .pswp__caption__center
