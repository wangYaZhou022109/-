#!handlebars

module
    div(data-region='main')

view('main') > .input-group
    input#nodeName.input(value=state.text 'readonly')(x-rule='required' x-marker='group')&if(state.required)
    input#nodeId(type='hidden' name=state.inputName value=state.id)
    .addon.btn#select-depot > i.icon-search

view('modal') > form.vertical
    label > string('picker.depot.label.select')
    .frame
        #tree
