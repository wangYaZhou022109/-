#! handlebars

module
    .popup-overlay.ground
    .popup.ground.animated#animate > .container
        i.icon-dismiss.dismiss#dismiss
        .popup-header(data-region='header')
        .popup-content(data-region='content')
        .popup-footer(data-region='footer')

view('header')
    .h1 > echo(state.title)
    .hr

view('footer')
    .btn.reverse.large#close > echo(state.closeText)
    each(btns)
        .btn.large(id='btn-' + id) > echo(text)
